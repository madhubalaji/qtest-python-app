[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info,
    venv,
    env,
    .venv,
    .env

# Error codes to ignore
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Error codes to always check
select = E,W,F,C

per-file-ignores =
    # Tests can have longer lines and more complex functions
    tests/*:E501,C901
    # __init__.py files can be empty
    __init__.py:F401